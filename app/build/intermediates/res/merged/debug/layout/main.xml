<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="#CEDCD4" >

        <LinearLayout
            android:id="@+id/celiang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/blue_button"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/celiangCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celiangcn"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/celiangEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celiangen"
                android:textColor="#000"
                android:textSize="25sp" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chayue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/green_button"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/chayueCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chayuecn"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/chayueEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chayueen"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
             android:background="@drawable/yellow_button"
            android:orientation="vertical" >

           <TextView
                android:id="@+id/settingCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingcn"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/settingEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingen"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linearLayout1"
        android:background="#000000"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mainTitleLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/nav_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/main_menu_title"
            android:textSize="25sp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:src="@drawable/logos" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:background="#DCDCDC"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/changeDevice"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/connectedDeviceName"
        android:layout_alignBottom="@+id/connectedDeviceName"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/connectedDeviceName"
        android:text="@string/changedevice" />

    <com.example.android.BluetoothChat.AlwaysMarqueeTextView
        android:id="@+id/connectedDeviceName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/connection"
        android:layout_alignBottom="@+id/connection"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/connection"
        android:background="@android:color/transparent"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="right"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/connecting"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/changeDevice"
        android:layout_alignRight="@+id/connectedDeviceName"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/connectingprogress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/connectedDeviceName"
        android:layout_toLeftOf="@+id/changeDevice"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bluetoothText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mainTitleLayout"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="@string/company"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bluetoothText"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="35dp"
        android:text="目标设备："
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/mainBg"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mainTitleLayout"
        android:src="#fff" />

</RelativeLayout>