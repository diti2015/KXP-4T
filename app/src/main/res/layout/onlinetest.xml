<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/settingTitleLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/nav_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/online_menu_title"
            android:textSize="25sp"
            android:textColor="#000" 
            />

        <ImageView
            android:id="@+id/deviceLamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:src="@drawable/lamp_red" />
    </RelativeLayout>

    <TextView
        android:id="@+id/onlineOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/onlineOrientationCheck"
        android:layout_alignLeft="@+id/onlineDip"
        android:text=""
        android:textSize="30sp" />

    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="#CEDCD4" >

        <LinearLayout
            android:id="@+id/clearZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/yellow_button"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/clearZeroCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clearzero_cn"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ReFactoryD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/green_button"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/chayueCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refactoryd_cn"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/onlineDip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingTitleLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="105dp"
        android:layout_toRightOf="@+id/onlineDipCheckbox"
        android:text=""
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/onlineDipCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="@string/dip"
        android:textSize="25sp"
        style="@style/MyCheckBox"
        android:layout_alignBaseline="@+id/onlineDip"
        android:layout_alignBottom="@+id/onlineDip"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:id="@+id/onlineOrientationCheck"
        style="@style/MyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/onlineDipCheckbox"
        android:layout_centerVertical="true"
        android:paddingLeft="50dp"
        android:text="@string/orientation"
        android:textSize="25sp" />

</RelativeLayout>