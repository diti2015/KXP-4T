<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mainTitleLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/nav_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/initmark_menu_title"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/initmark_device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:layout_below="@+id/mainTitleLayout"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/initDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/textView1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="@string/initmark_proname"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:layout_below="@+id/initDeviceName"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/markdepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/initProjectName"
        android:layout_marginTop="30dp"
        android:text="@string/initmark_delaytime"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/initDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/initDelyTimer"
        android:layout_alignRight="@+id/initDelyTimer"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:text="0" />

     <LinearLayout
            android:id="@+id/initStart"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:background="@drawable/red_button"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/initStartCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initstart_cn"
                android:textColor="#fff"
                android:textSize="30sp" />

     </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/initInterval"
        android:layout_marginTop="30dp"
        android:text="@string/initmark_depth"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/initDelyTimer"
        android:layout_alignBottom="@+id/initDelyTimer"
        android:layout_alignParentRight="true"
        android:text="@string/minute"
        android:textSize="18sp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/initInterval"
        android:layout_alignLeft="@+id/textView4"
        android:text="@string/second"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/initDepth"
        android:layout_alignLeft="@+id/textView6"
        android:text="@string/meter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/initInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/initDelyTimer"
        android:layout_alignRight="@+id/initDelyTimer"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:textSize="18sp"
        android:gravity="center"
        android:text="5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/initmark_interval"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:layout_below="@+id/markdepth"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/initProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="20"
        android:inputType="text"
        android:singleLine="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/initIntervalDown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/initDelyTimer"
        android:src="@drawable/interval_down" />

    <ImageButton
        android:id="@+id/initIntervalUp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView5"
        android:layout_alignRight="@+id/initDelyTimer"
        android:src="@drawable/interval_up" />

    <EditText
        android:id="@+id/initDelyTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/markdepth"
        android:layout_alignLeft="@+id/initProjectName"
        android:layout_toLeftOf="@+id/textView4"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="0" />

</RelativeLayout>